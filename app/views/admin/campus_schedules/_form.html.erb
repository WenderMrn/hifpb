<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="row">
          <div class="col-md-8">
            <svg class="glyph stroked home"><use xlink:href="#stroked-home"/></svg> <%= @campus.sigla %>
          </div>
        </div>
      </div>
      <div class="panel-body">
        <%= form_for([:admin, @campus, campus_schedule], html: {class: 'campus-schedule-form'}) do |f| %>
          <% if campus_schedule.errors.any? %>
            <div id="error_explanation">
              <ul class="alert alert-danger">
                <% campus_schedule.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

        <div class="col-md-12">
          <div class="form-group">
            <%= f.label :shift %>
            <%= f.select(:shift, CampusSchedule.shifts.map {|key, value| [key.humanize, key]}, {}, {class: 'form-control'}) %>
          </div>
        </div>

        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :start %>
            <%= f.time_select :start, {}, {class: ''} %>
          </div>
        </div>

        <div class="col-md-6">
        <div class="form-group">
          <%= f.label :end %>
          <%= f.time_select :end %>
        </div>
        </div>

        <div class="form-group">
          <%= f.submit 'Create', class: 'btn btn-success pull-right' %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
