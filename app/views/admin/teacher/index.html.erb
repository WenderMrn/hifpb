<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Professores</h1>
  </div>
</div><!--/.row-->

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <%= form_tag(importar_admin_teacher_index_path, class: 'form-inline') do |f| %>
        <div class="form-group">
          <%= label_tag("user", "Matrícula") %>
          <%= text_field_tag("user", nil, class: "form-control", placeholder: "1898373") %>
        </div>
        <div class="form-group pull-right">
          <%= button_tag("Importar do SUAP", class: "btn btn-success") %>
        </div>
        <% end %>
      </div>
      <div class="panel-body">
        <table data-toggle="table" id="table-import" data-search="true" data-pagination="true">
         <thead>
          <th>Matrícula</th>
          <th>Descrição</th>
          <th>E-mail</th>
          <th>Departamento</th>
        </thead>
        <tbody>
          <%- @teachers.each do |teacher| %>
          <tr>
           <td><%= teacher.id %></td>
           <td><%= teacher.name %></td>
           <td><%= teacher.mail %></td>
           <td><%= teacher.department %></td>
         </tr>
         <% end %>
       </tbody>
     </table>
   </div>
 </div>
</div>
</div>
