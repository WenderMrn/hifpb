<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="form-horizontal">
        <div class="panel-heading"><svg class="glyph stroked desktop computer and mobile"><use xlink:href="#stroked-desktop-computer-and-mobile"></use></svg> Novas permissoes</div>
        <div class="panel-body">
          <div class="col-md-12">
            <%= form_for :user do |form| %>
              <div class="form-group">
                <%= form.label :name, "Matricula" %>
                <%= form.text_field "user_registration", :value => @user.registration, :readonly => true, id: :classroom_name, class: "form-control" %>
              </div>
              <div class="form-group">
                <%= form.label :name, "Permissoes" %>
                <ul style="display: inline; list-style-type: none">
                  <% @permissions.each do |p| %>
                      <li>
                        <%= check_box_tag 'permission_ids[]', p.id -%>
                        <%= h p.title -%>
                      </li>
                  <% end %>
                </ul>
              </div>

              <div class="form-group">
                <%= form.submit 'Salvar', class: 'btn btn-success' %>
              </div>
            <% end %>        
            
          </div>
        </div>
      </div>
    </div>

  </div>
</div>