<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="row">
          <div class="col-md-12">
            <svg class="glyph stroked pencil"><use xlink:href="#stroked-pencil"/></svg> Editando usuário <%= @user.registration %>
          </div>
        </div>
      </div>

      <div class="panel-body">
		<%= form_for @user, url: admin_user_path, method: :patch do |f| %>
			<div class="row">
				<div class="col-md-6">
					<div class="form-group">
					<%= f.label "permission_ids", "Permissões"%>
					<%= f.select("permission_ids", @permissions.collect { |p| [p.title, p.id]}, {}, {multiple: true, include_blank: false, class: "form-control"}) %>
					</div>
				</div>
				<div class="col-md-6">
					<h5>Permissões atuais</h5>
					<ul>
						<% @user.permissions.each do |p|%>
							<li><%= p.title %></li>
						<% end %>
					</ul>
				</div>
			</div>

			<div class="row">
				<div class="col-md-6">
					<div class="form-group">
						<%= f.label "course_ids", "Cursos"%>
						<%= f.select(:course_ids, Course.all.collect { |c| [c.name, c.id]}, {}, {multiple: true, include_blank: false, class: "form-control"}) %>	
					</div>
				</div>
		 		<div class="col-md-6">
					<h5>Cursos atuais</h5>
					<ul>
						<% @user.courses.each do |c|%>
							<li><%= c.name %></li>
						<% end %>
					</ul>
				</div>
			</div>
			

			<div class="form-group">
				<%= f.submit 'Salvar', class: 'btn btn-info' %>	
			</div>
			
		<% end %>

      
      </div>
    </div>
  </div>
</div>
