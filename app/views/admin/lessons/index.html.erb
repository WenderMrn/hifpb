<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="row">
          <div class="col-md-8">
            <svg class="glyph stroked notepad "><use xlink:href="#stroked-notepad"/></svg> Aulas
          </div>
          <div class="col-md-4">
            <%= link_to 'Adicionar aula', new_admin_classroom_lesson_path, class: "btn btn-success pull-right" %>
          </div>
        </div>
      </div>
      <div class="panel-body">

        <table data-toggle="table" id="table-import">
          <thead>
            <th>Horário</th>
            <th>Segunda</th>
            <th>Terça</th>
            <th>Quarta</th>
            <th>Quinta</th>
            <th>Sexta</th>
          </thead>
          <tbody>

            <% @campus_schedules.each do |cs| %>
            <tr>
              <td><%= cs.start.strftime("%H:%M")%> ~ <%=cs.end.strftime("%H:%M") %></td>
              <td>
                <%= render 'cell', day: @monday.find_by(campus_schedule: cs) %>
              </td>
              <td>
                <%= render 'cell', day: @tuesday.find_by(campus_schedule: cs) %>
              </td>
              <td>
                <%= render 'cell', day: @wednesday.find_by(campus_schedule: cs) %>
              </td>
              <td>
                <%= render 'cell', day: @thursday.find_by(campus_schedule: cs) %>
              </td>
              <td>
                <%= render 'cell', day: @friday.find_by(campus_schedule: cs) %>
              </td>
            </tr>
            <% end %>
          </tbody>

        </table>
      </div>
    </div>
  </div>
</div>
