

<h1>Aulas da turma: <%= @classroom.name %></h1>
<h4>Clique nas aulas para editar</h4>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="row">
          <div class="col-md-8">
            <svg class="glyph stroked notepad "><use xlink:href="#stroked-notepad"/></svg> Aulas
          </div>
          <div class="col-md-4">
            <%= link_to 'Adicionar aula', new_admin_classroom_lesson_path, class: "btn btn-success pull-right" %>
          </div>
        </div>
      </div>
      <div class="panel-body">

        <table data-toggle="table" id="table-import">
          <thead>
              <th>Horário</th>
              <th>Segunda</th>
              <th>Terça</th>
              <th>Quarta</th>
              <th>Quinta</th>
              <th>Sexta</th>


          </thead>

          <tbody>

            <% @lessons.each do |aula| %>
            <tr>
            <td><%= aula.campus_schedule.start.strftime("%H:%M") %> - <%= aula.campus_schedule.end.strftime("%H:%M") %></td>
            <td><%= if (aula.day == 'Segunda')
                      link_to(aula.laboratory.name,edit_admin_classroom_lesson_path(aula.id))
                    end
                %></td>
                <td><%= if (aula.day == 'Terça')
                            link_to(aula.laboratory.name,edit_admin_classroom_lesson_path(aula.id))
                        end
                    %></td>
                    <td><%= if (aula.day == 'Quarta')
                                link_to(aula.laboratory.name)
                            end
                        %></td>
                        <td><%= if (aula.day == 'Quinta')
                                    link_to(aula.laboratory.name)
                                end
                            %></td>
                            <td><%= if (aula.day == 'Sexta')
                                        link_to(aula.laboratory.name)
                                    end
                                %></td>

            </tr>
            <% end %>
          </tbody>

        </table>




      </div>
    </div>
  </div>
</div>
