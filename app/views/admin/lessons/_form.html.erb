
<style>
  label {
    display: block;
    margin-bottom: 5px;
  }
</style>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="row">
          <div class="col-md-8">
            <svg class="glyph stroked notepad "><use xlink:href="#stroked-notepad"/></svg>
              para turma : <%= @classroom.name %>
          </div>
        </div>
      </div>
      <div class="panel-body">
         <%= form_for([:admin, @classroom, lesson]) do |form| %>


        <div class="form-group">
          <%= form.label :day, "Dia" %>
          <%= form.text_field :day, id: :lesson_day, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :schoolroom_id, "Sala" %>
          <%= form.select("schoolroom_id", options_from_collection_for_select(Schoolroom.all, 'id', 'name'), {}, class: "selectpicker", data: {'live-search' => 'false', width: "auto"}) %>
        </div>

        <div class="form-group">
          <%= form.label :laboratory_id, "Laboratório" %>
          <%= form.select("laboratory_id", options_from_collection_for_select(Laboratory.all, 'id', 'name'), {}, class: "selectpicker", data: {'live-search' => 'false', width: "auto"}) %>
        </div>

        <div class="form-group">
          <%= form.label :campus_schedules_id, "Horários" %>
          <%= form.select("campus_schedules_id", options_from_collection_for_select(CampusSchedule.all, 'id', 'start'), {}, class: "selectpicker", data: {'live-search' => 'false', width: "auto"}) %>
        </div>

        <div class="form-group">
          <%= form.submit 'Cadastrar', class: 'btn btn-success pull-right' %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
$('#xclassroom_course_id').selectpicker({
  size: 100
});
</script>
