<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Cadatrar Semestre</h1>
  </div>
</div><!--/.row-->

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <%= form_for :semester, class: 'form-control', url: admin_semesters_path do |f| %>
        <div class="panel-body" style="text-align: center">
          <div class="row">
            <div class="col-md-6">
              Ano
            </div>
            <div class="col-md-6">
              Semestre
            </div>
          </div>

          <div class="row">
            <div class="col-md-6">
              <%= f.select :year, (Time.now.year - 5)..Time.now.year %>
            </div>
            <div class="col-md-6">
              <%= f.select :semester, 1..2 %>
            </div>
          </div>

          <div class="row">
            <div class="col-md-6">
              Início do Semestre
            </div>
            <div class="col-md-6">
              Término do Semestre
            </div>
          </div>

          <div class="row">
            <div class="col-md-6">
              <%= f.date_field :start_date, class: 'form-control' %>
            </div>
            <div class="col-md-6">
              <%= f.date_field :end_date, class: 'form-control' %>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <%= f.submit 'Salvar', class: 'btn btn-success' %>
            </div>
          </div>
        <% end %>
      </div><!-- panel-body -->
    </div><!-- panel panel-default -->
  </div>
</div>
