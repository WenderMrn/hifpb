<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="form">
        <div class="panel-heading">
          <svg class="glyph stroked calendar">
            <use xlink:href="#stroked-calendar"></use>
          </svg>Semestre
          <%= @semester.to_s%></div>
        <div class="panel-body">
          <div class="col-md-12">
            <%= form_for @semester, url: admin_semester_path(@semester), html: { method: :patch } do |f| %>
            <div class="row">
              <div class="form-group">
                <%= f.label :year, "Ano"%>
                <%= f.select(:year, (Time.now.year - 5)..Time.now.year, {}, {:class => "form-control"}) %>
              </div>
            </div>
            <div class="row">
              <div class="form-group">
                <%= f.label :semester, "Semestre"%>
                <%= f.select(:semester, 1..2, {}, {:class => "form-control" }) %>
              </div>
            </div>
            <div class="row">
              <div class="form-group">
                <%= f.label :status, "Status"%>
                <%= f.select(:status, [['Ativo', true], ['Inativo', false]], {}, {:class => "form-control"}) %>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <%= f.submit 'Salvar', class: 'btn btn-success' %>
              </div>
            </div>
            <% end %>
          </div>
        </div>
        <!-- panel-body -->
      </div>
      <!-- panel panel-default -->
    </div>
  </div>
</div>
