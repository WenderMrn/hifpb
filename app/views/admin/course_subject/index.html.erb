<div class="row">
	<div class="col-lg-12">
		<h1 class="page-header">Disciplinas</h1>
	</div>
</div><!--/.row-->

<div class="row">
	<div class="col-lg-12">
		<div class="panel panel-default">
			<div class="panel-heading">
        <%= form_tag(importar_admin_course_subject_index_path, class: 'form-inline') do |f| %>
        <div class="form-group">
          <%= label_tag("id_curso", "Curso") %>
          <%= select_tag("id_curso", options_from_collection_for_select(@courses, 'id', 'description'), class: "selectpicker", data: {'live-search' => 'true', width: "auto"}) %>
        </div>
        <div class="form-group">
          <%= button_tag("Importar do SUAP", class: "btn btn-success pull-right") %>
        </div>
        <% end %>
      </div>
      <div class="panel-body">
        <table data-toggle="table" id="table-import" data-search="true" data-pagination="true">
         <thead>
          <th>#</th>
          <th>Descrição</th>
          <th>Sigla</th>
          <th>Curso</th>
          <th>Período</th>
        </thead>
        <tbody>
          <%- @course_subjects.each do |subject| %>
          <tr>
           <td><%= subject.id %></td>
           <td><%= subject.description %></td>
           <td><%= subject.initials %></td>
           <td><%= subject.course.description %></td>
           <td><%= subject.semester %></td>
         </tr>
         <% end %>
       </tbody>
     </table>
   </div>
 </div>
</div>
</div>
