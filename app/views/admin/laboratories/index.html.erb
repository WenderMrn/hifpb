<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Laboratórios</h1>
  </div>
</div><!--/.row-->

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="row">
          <div class="col-md-8">
            <svg class="glyph stroked calendar"><use xlink:href="#stroked-calendar"/></svg> Lista de Laboratórios
          </div>
          <%= link_to('Novo Laboratório', new_admin_laboratory_path, class: "btn btn-success pull-right")%>
        </div>
      </div>
      <div class="panel-body">
        <table data-toggle="table" id="table-import" class="table table-hover">
          <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Sigla</th>
            <th colspan="3">Ações</th>
          </tr>

          <% @laboratories.each do |laboratory| %>
            <tr>
              <td><%= laboratory.id %></td>
              <td><%= laboratory.name %></td>
              <td><%= laboratory.initials %></td>
              <td style="text-align:center">
                <%= link_to admin_laboratory_path(laboratory), class: "label label-info" do %>
                  <span>Detalhes</span>
                <% end %>
              </td>
              <td style="text-align:center">
                <%= link_to edit_admin_laboratory_path(laboratory), class: "label label-primary" do %>
                  <span>Editar</span>
                <% end %>
              </td>
              <td style="text-align:center">
                <%= link_to admin_laboratory_path(laboratory),
                                      method: :delete,
                                      data: { confirm: 'Tem certeza que quer apagar laboratório?' },
                                                        class: "label label-danger" do %>
                  <span>Excluir</span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>
