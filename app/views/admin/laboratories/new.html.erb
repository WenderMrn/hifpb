<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Cadastrar Laboratório</h1>
  </div>
</div><!--/.row-->

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <%= form_for :laboratory, url: admin_laboratories_path do |f| %>
        <div class="panel-body" style="text-align: center">
          <div class="row">
            <div class="col-md-4">
              Nome
            </div>
            <div class="col-md-4">
              Lotação Máxima
            </div>
            <div class="col-md-4">
              Quantidade de Recursos
            </div>
          </div>
          <div class="row">
            <div class="col-md-4">
              <%= f.text_field :name %>
            </div>
            <div class="col-md-4">
              <%= f.number_field :maximum_capacity %>
            </div>
            <div class="col-md-4">
              <%= f.number_field :amount_resources %>
            </div>
          </div>

          <div class="row">
            <div class="col-md-6">
              Status
            </div>
            <div class="col-md-6">
              Sigla
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <%= f.select :status, [['Ativo', true], ['Inativo', false]] %>
            </div>
            <div class="col-md-6">
              <%= f.text_field :initials %>
            </div>
          </div>

          <div class="row">
            <div class="col-md-12">
              <%= f.submit 'Salvar', class: 'btn btn-success' %>
            </div>
          </div>
        <% end %>
      </div><!-- panel-body -->
    </div><!-- panel panel-default -->
  </div>
</div>
