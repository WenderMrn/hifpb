<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="row">
          <div class="col-md-8">
            <svg class="glyph stroked calendar"><use xlink:href="#stroked-calendar"/></svg> Salas
          </div>
          <div class="col-md-4">

          </div>
        </div>
      </div>
      <div class="panel-body">
        <table data-toggle="table" id="table-import" data-search="true" data-pagination="true">
          <thead>
            <th>Id</th>
            <th>Nome</th>
            <th>Sigla</th>
            <th>Ações</th>
          </thead>

          <tbody>
            <% @schoolrooms.each do |schoolroom| %>
            <tr>
              <td><%= schoolroom.id %></td>
              <td><%= schoolroom.name %></td>
              <td><%= schoolroom.initials %></td>
              <td style="text-align:center">
                <%= link_to admin_report_schoolroom_path(schoolroom), class: "btn btn-default" do %>
                <span>Ver horarios</span>
                <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
